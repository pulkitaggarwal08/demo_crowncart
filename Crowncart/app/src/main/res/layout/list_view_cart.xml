<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="140dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_men_category" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/category_name"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:font="@string/semibold_sans" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:src="@mipmap/cancel" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cat_name"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:gravity="center"
            android:text="@string/size"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:font="@string/regular_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cat_name"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tv_size"
            android:layout_toRightOf="@+id/tv_size"
            android:gravity="center"
            android:text="@string/quantity"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:font="@string/regular_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_quantity"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:drawableEnd="@mipmap/rupee"
            android:drawableRight="@mipmap/rupee"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/green_light"
            android:textSize="16sp"
            app:font="@string/semibold_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_quantity"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:font="@string/semibold_sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/iv_product_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey" />


    </RelativeLayout>

</RelativeLayout>

